<mvc:View
    controllerName="ui5Demo.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    core:require="{
        formatter: 'ui5Demo/model/formatter'
    }"
>
    <Page
        title="{i18n>appTitle}"
        id="page"
    >
        <content>
            <VBox class="sapUiSmallMargin">
                <f:Form
                    id="FormToolbar"
                    editable="true"
                    ariaLabelledBy="Title1"
                >
                    <f:toolbar>
                        <Toolbar id="TB1">
                            <Title
                                id="Title1"
                                text="Enter Details"
                            />
                            <ToolbarSpacer />
                            <Button icon="sap-icon://settings" />
                            <Button icon="sap-icon://drop-down-list" />
                        </Toolbar>
                    </f:toolbar>
                    <f:layout>
                        <f:ResponsiveGridLayout
                            labelSpanXL="4"
                            labelSpanL="3"
                            labelSpanM="4"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="0"
                            emptySpanL="4"
                            emptySpanM="0"
                            emptySpanS="0"
                            columnsXL="2"
                            columnsL="1"
                            columnsM="1"
                            singleContainerFullSize="false"
                        />
                    </f:layout>
                    <f:formContainers>
                        <f:FormContainer ariaLabelledBy="Title2">
                            <f:FormElement label="First Name">
                                <Input
                                    type="Text"
                                    value="{/userForm/firstName}"
                                    valueLiveUpdate="true"
                                />
                            </f:FormElement>
                            <f:FormElement label="Last Name">
                                <Input
                                    type="Text"
                                    value="{/userForm/lastName}"
                                    valueLiveUpdate="true"
                                />
                            </f:FormElement>
                            <f:FormElement>
                                <HBox
                                    width="auto"
                                    justifyContent="Center"
                                    class="sapUiSmallMarginTop"
                                >
                                    <Button
                                        text="Submit"
                                        press="formSubmit"
                                        width="auto"
                                    />
                                </HBox>
                            </f:FormElement>
                        </f:FormContainer>
                    </f:formContainers>
                </f:Form>
                
            </VBox>
        </content>
    </Page>
</mvc:View>
